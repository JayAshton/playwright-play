{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "module": "ES2022",
    "pretty": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "strict": true,
    "noEmit": true,
    "useDefineForClassFields": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
